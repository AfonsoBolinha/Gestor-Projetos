@page "/proj-patrocinio-priv"
@layout EstatisticasLayout
@inherits TrabalhoBd.Pages.ProjPatrocinioPrivComponent

@using Radzen
@using Radzen.Blazor
@using TrabalhoBd.Models.Trabalho
<PageTitle>ProjPatrocinioPriv</PageTitle>
<RadzenContent Container="main">
  <ChildContent>
    <RadzenLabel style="width: 20%" Text="Nome do Projeto">
    </RadzenLabel>
    <RadzenTextBox style="margin-bottom: 10px; width: 80%" Name="Textbox0" TValue="dynamic" @bind-nomeBind=@nome Value=@nome Change='@(args=> getNome(args))'>
    </RadzenTextBox>
    <RadzenLabel style="width: 20%" Text="Patrocinador" >
    </RadzenLabel>
    <RadzenTextBox style="margin-bottom: 20px; width: 80%" Name="Textbox1" TValue="dynamic" @bind-patrocinioBind=@patrocinio Value=@patrocinio Change='@(args=> getPatrocinio(args))'>
    </RadzenTextBox>
    <RadzenDataGrid @ref="datagrid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getProjetoPatrocinioPrivadosResult.Where(s=>(s.NomeProj.Contains(nome)) && (s.NomePatrocinio.Contains(patrocinio)))" TItem="TrabalhoBd.Models.Trabalho.ProjetoPatrocinioPrivado" PageSize="10">
      <Columns>
        <RadzenDataGridColumn TItem="TrabalhoBd.Models.Trabalho.ProjetoPatrocinioPrivado" Property="NomeProj" Title="Nome Proj">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="TrabalhoBd.Models.Trabalho.ProjetoPatrocinioPrivado" Property="NomePatrocinio" Title="Nome Patrocinio">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="TrabalhoBd.Models.Trabalho.ProjetoPatrocinioPrivado" Property="Montante" Title="Montante">
        </RadzenDataGridColumn>
      </Columns>
    </RadzenDataGrid>
  </ChildContent>
  @code{
    string nome="",nomeBind,patrocinio="",patrocinioBind;

    public void getNome(object value){
      nome=value as string;
    }
    public void getPatrocinio(object value){
      patrocinio=value as string;
    }
  }
</RadzenContent>
