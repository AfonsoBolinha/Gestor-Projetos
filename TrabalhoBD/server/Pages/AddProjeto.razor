@page "/add-projeto"
@layout AdicionarLayout
@inherits TrabalhoBd.Pages.AddProjetoComponent

@using Radzen
@using Radzen.Blazor
@using TrabalhoBd.Models.Trabalho
<PageTitle>Add Projeto</PageTitle>
<RadzenContent Container="main">
  <ChildContent>
    <div class="row">
      <div class="col-md-12">
        <RadzenTemplateForm Data="@projeto" TItem="TrabalhoBd.Models.Trabalho.Projeto" Visible="@(projeto != null)" Submit="@Form0Submit">
          <ChildContent>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="Nome" style="width: 100%" Text="Nome">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenTextBox MaxLength="50" style="display: block; width: 100%" @bind-Value="@(projeto.Nome)" Name="Nome">
                </RadzenTextBox>
                <RadzenRequiredValidator Component="Nome" style="position: absolute" Text="Nome is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="Short_Name" style="width: 100%" Text="Short Name">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenTextBox MaxLength="10" style="display: block; width: 100%" @bind-Value="@(projeto.Short_Name)" Name="Short_Name">
                </RadzenTextBox>
                <RadzenRequiredValidator Component="Short_Name" style="position: absolute" Text="Short_Name is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="Descricao" style="width: 100%" Text="Descricao">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenTextBox MaxLength="50" style="width: 100%" @bind-Value="@(projeto.Descricao)" Name="Descricao">
                </RadzenTextBox>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="ID_UC" style="width: 100%" Text="Id Uc">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(projeto.ID_UC)" Name="ID_UC">
                </RadzenNumeric>
                <RadzenRequiredValidator Component="ID_UC" style="position: absolute" Text="ID_UC is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="Max_Cost" style="width: 100%" Text="Custo Máximo">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(projeto.Max_Cost)" Name="Max_Cost">
                </RadzenNumeric>
                <RadzenRequiredValidator Component="Max_Cost" style="position: absolute" Text="Max_Cost is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="DOI" style="width: 100%" Text="DOI">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenTextBox MaxLength="50" style="display: block; width: 100%" @bind-Value="@(projeto.DOI)" Name="DOI">
                </RadzenTextBox>
                <RadzenRequiredValidator Component="DOI" style="position: absolute" Text="DOI is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="Data_Init" style="width: 100%" Text="Data Inicial">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDatePicker style="display: block; width: 100%" @bind-Value="@(projeto.Data_Init)" Name="Data_Init">
                </RadzenDatePicker>
                <RadzenRequiredValidator Component="Data_Init" style="position: absolute" Text="Data_Init is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="Data_Fin" style="width: 100%" Text="Data Final ">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDatePicker style="width: 100%" @bind-Value="@(projeto.Data_Fin)" Name="Data_Fin">
                </RadzenDatePicker>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="Cientific_Domain" style="width: 100%" Text="Dominio Cientifico">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenTextBox MaxLength="50" style="display: block; width: 100%" @bind-Value="@(projeto.Cientific_Domain)" Name="Cientific_Domain">
                </RadzenTextBox>
                <RadzenRequiredValidator Component="Cientific_Domain" style="position: absolute" Text="Cientific_Domain is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="ID_IR" style="width: 100%" Text="Responsável">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(projeto.ID_IR)" Name="ID_IR">
                </RadzenNumeric>
                <RadzenRequiredValidator Component="ID_IR" style="position: absolute" Text="ID_IR is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div class="row">
              <div class="col offset-sm-3">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save">
                </RadzenButton>
                <RadzenButton ButtonStyle="ButtonStyle.Light" style="margin-left: 1rem" Text="Cancel" Click="@Button2Click">
                </RadzenButton>
              </div>
            </div>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
