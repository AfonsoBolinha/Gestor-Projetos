@inherits TrabalhoBd.Layouts.EstatisticasLayoutComponent

@using Radzen
@using Radzen.Blazor
@using TrabalhoBd.Models.Trabalho
@using TrabalhoBd.Pages
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout>
  <ChildContent>
    <RadzenHeader>
      <ChildContent>
        <div class="row justify-content-start align-items-center">
          <div class="col-6 d-flex align-items-center">
            <RadzenSidebarToggle Click="@SidebarToggle0Click">
            </RadzenSidebarToggle>
            <RadzenLabel Text="TrabalhoBD">
            </RadzenLabel>
          </div>
          <div class="col-6 text-right">
          </div>
        </div>
      </ChildContent>
    </RadzenHeader>
    <RadzenBody @ref="body0">
      <ChildContent>
        <RadzenContentContainer Name="main">
        @Body
        </RadzenContentContainer>
      </ChildContent>
    </RadzenBody>
    <RadzenSidebar @ref="sidebar0">
      <ChildContent>
        <RadzenPanelMenu style="height: 100%">
          <ChildContent>
            <RadzenPanelMenuItem Path="welcome" Text="Welcome">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="project-state" Text="Estado Projetos">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="investigador-status" Text="Estado Investigadores">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="ui-rank" Text="Unidades de Investigaçao">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="peso-patrocinios" Text="Peso dos Patrocinios">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="project-ranks" Text="Ranking de Projetos">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="proj-patrocinio-public" Text="Patrocinios Publico A Projetos">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="proj-patrocinio-priv" Text="Patrocinio Privado A Projetos">
            </RadzenPanelMenuItem>
          </ChildContent>
        </RadzenPanelMenu>
      </ChildContent>
    </RadzenSidebar>
    <RadzenFooter>
      <ChildContent>
        <RadzenLabel Text="TrabalhoBD, Copyright Ⓒ 2022">
        </RadzenLabel>
      </ChildContent>
    </RadzenFooter>
  </ChildContent>
</RadzenLayout>
