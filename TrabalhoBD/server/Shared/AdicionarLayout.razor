@inherits TrabalhoBd.Layouts.AdicionarLayoutComponent

@using Radzen
@using Radzen.Blazor
@using TrabalhoBd.Models.Trabalho
@using TrabalhoBd.Pages
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout>
  <ChildContent>
    <RadzenHeader>
      <ChildContent>
        <div class="row justify-content-start align-items-center">
          <div class="col-6 d-flex align-items-center">
            <RadzenSidebarToggle Click="@SidebarToggle0Click">
            </RadzenSidebarToggle>
            <RadzenLabel Text="TrabalhoBD">
            </RadzenLabel>
          </div>
          <div class="col-6 text-right">
          </div>
        </div>
      </ChildContent>
    </RadzenHeader>
    <RadzenBody @ref="body0">
      <ChildContent>
        <RadzenContentContainer Name="main">
        @Body
        </RadzenContentContainer>
      </ChildContent>
    </RadzenBody>
    <RadzenSidebar @ref="sidebar0">
      <ChildContent>
        <RadzenPanelMenu style="height: 100%">
          <ChildContent>
            <RadzenPanelMenuItem Path="welcome" Target="_self" Text="Bem-Vindo">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="add-investigador" Target="_self" Text="Investigador">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="add-projeto" Text="Projeto">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="add-instituicao" Target="_self" Text="Instituição">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="add-publicacao" Text="Publicação">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Expanded="false" Target="_self" Text="Financiador">
              <ChildContent>
                <RadzenPanelMenuItem Path="add-patrocinio-publico" Target="_self" Text="Publico">
                </RadzenPanelMenuItem>
                <RadzenPanelMenuItem Path="add-patrocinador-privado" Target="_self" Text="Privado">
                </RadzenPanelMenuItem>
              </ChildContent>
            </RadzenPanelMenuItem>
          </ChildContent>
        </RadzenPanelMenu>
      </ChildContent>
    </RadzenSidebar>
    <RadzenFooter>
      <ChildContent>
        <RadzenLabel Text="TrabalhoBD, Copyright Ⓒ 2022">
        </RadzenLabel>
      </ChildContent>
    </RadzenFooter>
  </ChildContent>
</RadzenLayout>
